<UserControl x:Class="PJK.WPF.PRISM.PM2020.Module.Projects.Views.ProjectDetail"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"             
             prism:ViewModelLocator.AutoWireViewModel="True">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBox Grid.Row="0" Grid.Column="0"     Margin="2" IsEnabled="False" Text="Search Properties"/>
        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto"
						VerticalScrollBarVisibility="Visible">
            <StackPanel>
                <Label>Add New Project</Label>
                    <StackPanel Margin="0,0,0,2">
                        <StackPanel Orientation="Horizontal" Margin="0,0,10,0" HorizontalAlignment="Right">
                            <Label Content="Opacity"/>
                            <TextBox Width="150" Text="20%"  Margin="2"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,10,0" HorizontalAlignment="Right">
                            <Label Content="Visibility"/>
                            <ComboBox Text="Item1" Width="150" Margin="2">
                                <ComboBoxItem Padding="2" IsSelected="True" Content="Visible"/>
                                <ComboBoxItem Padding="2" Content="Hidden"/>
                                <ComboBoxItem Padding="2" Content="Collapsed"/>
                            </ComboBox>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,10,0" HorizontalAlignment="Right">
                            <Label Margin="0,0,100,0" Content="Effect"/>
                            <Button Content="Add" Width="50" Margin="2"/>
                            <Button Content="Cancel" Width="50" Margin="2"/>
                    </StackPanel>
                    </StackPanel>
                
            </StackPanel>
        </ScrollViewer>
    </Grid>









</UserControl>
