<UserControl x:Class="PJK.WPF.PRISM.PM2020.Module.Projects.Views.ProjectManager"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:wpfTool="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit"
             xmlns:local="clr-namespace:PJK.WPF.PRISM.PM2020.Module.Projects"
             xmlns:data="clr-namespace:PJK.WPF.PRISM.PM2020.Module.Projects.Model"
             prism:ViewModelLocator.AutoWireViewModel="True">

    <UserControl.Resources>
        <local:WindowOpenCloseConverter x:Key="windowOpenCloseConverter"/>

        <SolidColorBrush x:Key="myBorderColour" Color="#FFFFFFFF"/>
        <SolidColorBrush x:Key="myBorderBackgroundColour" Color="#FFe1e1e1"/>
        <SolidColorBrush x:Key="myBorderBackgroundLightColour" Color="#FFf1f1f1"/>
        <!--<SolidColorBrush x:Key="myWindowInnerColour" Color="#FFe1e1e1"/>-->
        <SolidColorBrush x:Key="myButtonColour" Color="#FFffcc66"/>

        <DataTemplate DataType="{x:Type data:Project}">
            <StackPanel>
                <TextBlock Text="{Binding ProjectName}" />
                <TextBlock Text="{Binding Priority}" />
                <TextBlock Text="{Binding SystemId}" />
            </StackPanel>
        </DataTemplate>
    </UserControl.Resources>

    <Border BorderBrush="{StaticResource myBorderColour}" Background="{StaticResource myBorderBackgroundColour}" BorderThickness="1">
        
        
        
        <Grid Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="0" />
            </Grid.ColumnDefinitions>

            <Border BorderBrush="{StaticResource myBorderColour}" Background="{StaticResource myBorderBackgroundLightColour}" BorderThickness="0" Grid.Row="2" Grid.Column="0" Margin="0" >
                <DataGrid x:Name="ProjectsList" SelectionMode="Single" 
                           ItemsSource="{Binding Path=Projects}" AutoGenerateColumns="False" 
                           CanUserAddRows="False" CanUserReorderColumns="False" VerticalAlignment="Top">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Path=Id}" IsReadOnly="True" Width="30" />
                        <DataGridTextColumn Header="PROJECT" Binding="{Binding Path=ProjectName}" IsReadOnly="True" Width="3*" />
                        <DataGridTextColumn Header="SYSTEM" Binding="{Binding Path=SystemId}" IsReadOnly="True" Width="30" />
                        <DataGridTextColumn Header="PRIORITY" Binding="{Binding Path=Priority}" IsReadOnly="True" Width="30" />
                        <DataGridTextColumn Header="DEADLINE" Binding="{Binding Path=Deadline}" IsReadOnly="True" Width="100" />
                        <DataGridTextColumn Header="STATUS" Binding="{Binding Path=StatusID}" IsReadOnly="True" Width="30" />
                    </DataGrid.Columns>
                </DataGrid>
    
            </Border>

            <Border Grid.Row="3"  Margin="10,0,10,0" >
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Command="{Binding ShowAddProjectCommand}" Width="100" Height="30" HorizontalAlignment="Left" Margin="0,10">Add Project</Button>
                </StackPanel>
            </Border>




            <wpfTool:ChildWindow   
                Grid.Column="0" Grid.ColumnSpan="9"
                Grid.Row="0" Grid.RowSpan="3"
                Height="500"
                Width="400" 
                Left="10" 
                Top="10"
                Name="chWindow"
                Caption="Add New Project"
                WindowState="{Binding ShowAddProject, Converter={StaticResource windowOpenCloseConverter}}">
            <!--<ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto"
						VerticalScrollBarVisibility="Visible">-->

                <Border BorderBrush="{StaticResource myBorderColour}" Background="{StaticResource myBorderBackgroundColour}" BorderThickness="1">
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="0" />
                            </Grid.ColumnDefinitions>

                            <Label Grid.Row="0" 
                                   FontSize="14" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,5">

                                Add New Project
                            </Label>

                        <Border BorderBrush="{StaticResource myBorderColour}" Background="{StaticResource myBorderBackgroundLightColour}" BorderThickness="1" Grid.Row="1" Grid.Column="0" >

                                <StackPanel Margin="30,20,0,20">
                                    <StackPanel Orientation="Horizontal" Margin="0,0,10,0" HorizontalAlignment="Left">
                                        <Label Width="55" Content="Project"/>
                                        <TextBox Width="150" Text="20%"  Margin="2"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,10,0" HorizontalAlignment="Left">
                                    <Label Width="55" Content="Priority"/>
                                        <ComboBox Text="Item1" Width="150" Margin="2">
                                            <ComboBoxItem Padding="2" IsSelected="True" Content="High"/>
                                            <ComboBoxItem Padding="2" Content="Medium"/>
                                            <ComboBoxItem Padding="2" Content="Low"/>
                                        </ComboBox>
                                    </StackPanel>

                                </StackPanel>
                            </Border>

                            <Border Grid.Row="2" Margin="0,10,0,0" >
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Command="{Binding AddProjectCommand}" Width="100" Height="30" Margin="5">Add</Button>
                                <Button Command="{Binding CancelAddProjectCommand}" Width="100" Height="30" Margin="2,2,0,2">Cancel</Button>
                            </StackPanel>
                        </Border>

                        </Grid>

                    </Border>
                <!--</ScrollViewer>-->
            </wpfTool:ChildWindow>
        </Grid>
    </Border>
    








</UserControl>
